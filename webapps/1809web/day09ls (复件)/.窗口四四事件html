<script type="text/javascript">
/* eval() */
	function fn(str){
		if(str=="C"){
			d1.innerHTML="";
		}else if(str=="="){
			d1.innerHTML = eval(d1.innerHTML);
		}else{//数字和运算符
			d1.innerHTML+=str;
		}
	}
</script>
